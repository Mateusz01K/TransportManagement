@model TransportManagement.Models.User.ResetPassword.ForgotPasswordViewModel

@section Styles{
    <link rel="stylesheet" href="~/css/login.css" />
}


<div class="container">
    <form class="form-forgot" asp-action="ForgotPassword">
        <h4>Wprowadź e-mail na który zostanie wysłany link do zmiany hasła.</h4>
        <label asp-for="Email"></label>
        <input type="email" id="email" name="Email" class="form-control" />
        @*<span asp-validation-for="Email" class="text-danger"></span>*@
        <button type="submit" class="btn btn-primary">Resetuj hasło.</button>
    </form>
</div>