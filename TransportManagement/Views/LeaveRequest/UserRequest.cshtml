@model TransportManagement.Models.LeaveRequests.LeaveRequestViewModel

@section Styles{
    <link rel="stylesheet" href="~/css/login.css" />
}
<table class="table">
    <thead>
        <tr>
            <th>Data początkowa</th>
            <th>Data zakończenia</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var request in Model.LeaveRequests)
        {
            <tr>
                <td>@request.StartDate.ToShortDateString()</td>
                <td>@request.EndDate.ToShortDateString()</td>
                <td>@request.Status</td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" asp-area="" asp-controller="LeaveRequest" asp-action="SubmitLeaveRequest" role="button">Złóz wniosek</a>
