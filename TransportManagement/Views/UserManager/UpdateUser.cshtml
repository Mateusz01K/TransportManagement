@model TransportManagement.Models.User.UserViewModel
@{
    ViewData["Title"] = "Zarządzanie rolami";
}

<div class="text-center">
    <h1 class="display-4">Lista Użytkowników</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Imie</th>
                <th scope="col">Nazwisko</th>
                <th scope="col">Email</th>
                <th scope="col">Rola</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td scope="row">@item.Name</td>
                    <td scope="row">@item.LastName</td>
                    <td scope="row">@item.Email</td>
                    <td scope="row">@item.Role</td>
                </tr>
            }
        </tbody>
    </table>
</div>


<form method="put" asp-controller="UserManager" asp-action="UpdateThisUser">
    <div class="form-group">
        <label for="Email">Email: <span style="color: red">*</span></label>
        <input type="email" class="form-control" id="Email" placeholder="Email" name="Email" required />
    </div>

    <div class="form-group">
        <label for="firstName">Imię: <span style="color: red">*</span></label>
        <input type="text" class="form-control" id="fisrName" placeholder="Imie" name="firstName" />
    </div>

    <div class="form-group">
        <label for="lastName">Nazwisko: <span style="color: red">*</span></label>
        <input type="text" class="form-control" id="lastName" placeholder="Nazwisko" name="lastname" />
    </div>

    <div class="form-group">
        <label for="dateofbirth">Data Urodzenia: <span style="color: red">*</span></label>
        <input type="datetime" class="form-control" id="dateofbirth" placeholder="Data Urodzenia" name="dateofbirth" />
    </div>

    <div class="form-group">
        <label for="phonenumber">Nr Telefonu: <span style="color: red">*</span></label>
        <input type="text" class="form-control" id="phonenumber" placeholder="Nr Telefonu" name="phonenumber" />
    </div>

    <div class="form-group">
        <label for="address">Address: <span style="color: red">*</span></label>
        <input type="text" class="form-control" id="address" placeholder="Address" name="address" />
    </div>

    <div class="form-group">
        <label for="experience">Doświadczenie: <span style="color: red">*</span></label>
        <input type="number" class="form-control" id="experience" placeholder="Doświadczenie" name="experience" />
    </div>

    <div class="text-center m-5">
        <button type="submit" class="btn btn-warning">Edytuj</button>
        <a class="btn btn-danger" href="javascript: history.go(-1)">Wróć</a>
    </div>
</form>