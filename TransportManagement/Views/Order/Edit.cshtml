@model TransportManagement.Models.Orders.OrderViewModel
@{
    ViewData["Title"] = "Zlecenia";
}



<div class="text-center">
    <h1 class="display-4">Lista Zleceń</h1>
    <div class="table-container">
        <table class="table table-hover" id="ordersTable">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nr</th>
                    <th scope="col">Data załadunku</th>
                    <th scope="col">Data dostawy</th>
                    <th scope="col">Lokalizacja załadunku</th>
                    <th scope="col">Lokalizacja rozładunku</th>
                    <th scope="col">Typ Ładunku</th>
                    <th scope="col">Kierowca</th>
                    <th scope="col">Status</th>
                    <th scope="col">Kolejka</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Orders)
                {
                    <tr>
                        <td scope="row">@item.Id</td>
                        <td scope="row">@item.OrderNumber</td>
                        <td scope="row">@item.StartDate</td>
                        <td scope="row">@item.EndDate</td>
                        <td scope="row">@item.PickupLocation</td>
                        <td scope="row">@item.DeliveryLocation</td>
                        <td scope="row">@item.LoadType</td>
                        <td scope="row">@item.DriverEmail</td>
                        <td scope="row">@item.Status</td>
                        <td scope="row">@item.Revenue</td>
                        <td scope="row">@item.Priority</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<form method="post" asp-controller="Order" asp-action="Edit" class="form-container">
    <div class="form-group">
        <label for="Id">Id: <span style="color: red">*</span></label>
        <input type="number" class="form-control" id="Id" placeholder="Id" name="Id" required />
    </div>

    <div class="form-group">
        <label for="orderNumber">Nr:</label>
        <input type="text" class="form-control" id="orderNumber" placeholder="Nr" name="orderNumber" />
    </div>

    <div class="form-group">
        <label for="startDate">Data załadunku: </label>
        <input type="datetime" class="form-control" id="startDate" placeholder="Data załadunku" name="startDate" />
    </div>

    <div class="form-group">
        <label for="endDate">Data dostawy:</label>
        <input type="datetime" class="form-control" id="endDate" placeholder="Data dostawy" name="endDate" />
    </div>

    <div class="form-group">
        <label for="pickupLocation">Lokalizacja załadunku:</label>
        <input type="text" class="form-control" id="pickupLocation" placeholder="Lokalizacja załadunku" name="pickupLocation" />
    </div>

    <div class="form-group">
        <label for="deliveryLocation">Lokalizacja rozładunku:</label>
        <input type="text" class="form-control" id="deliveryLocation" placeholder="Lokalizacja rozładunku" name="deliveryLocation" />
    </div>

    <div class="form-group">
        <label for="loadType">Typ ładunku:</label>
        <input type="text" class="form-control" id="loadType" placeholder="Typ ładunku" name="loadType" />
    </div>

    <div class="form-group">
        <label for="status">Status:</label>
        <input type="text" class="form-control" id="status" placeholder="Status" name="status" />
    </div>

    <div class="form-group">
        <label for="revenue">Przychód:</label>
        <input type="text" class="form-control" id="revenue" placeholder="Przychód" name="revenue" />
    </div>

    <div class="text-center m-5">
        <button type="submit" class="btn btn-success">Edytuj</button>
    </div>
    <div class="text-center mt-4">
        <a class="btn btn-danger" href="javascript: history.go(-1)">Wróć</a>
    </div>
</form>