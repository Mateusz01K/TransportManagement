@model TransportManagement.Models.Orders.OrderViewModel
@{
    ViewData["Title"] = "Zlecenia";
}
<form method="post" asp-controller="Order" asp-action="Create">
    <div class="form-group">
        <label for="orderNumber">Imię: <span style="color: red">*</span></label>
        <input type="text" class="form-control" id="orderNumber" placeholder="Nr" name="orderNumber" />
    </div>

    <div class="form-group">
        <label for="startDate">Data załadunku: <span style="color: red">*</span></label>
        <input type="datetime" class="form-control" id="startDate" placeholder="Data załadunku" name="startDate" />
    </div>

    <div class="form-group">
        <label for="endDate">Data dostawy: <span style="color: red">*</span></label>
        <input type="datetime" class="form-control" id="endDate" placeholder="Data dostawy" name="endDate" />
    </div>

    <div class="form-group">
        <label for="pickupLocation">Lokalizacja załadunku: <span style="color: red">*</span></label>
        <input type="text" class="form-control" id="pickupLocation" placeholder="Lokalizacja załadunku" name="pickupLocation" />
    </div>

    <div class="form-group">
        <label for="deliveryLocation">Lokalizacja rozładunku: <span style="color: red">*</span></label>
        <input type="text" class="form-control" id="deliveryLocation" placeholder="Lokalizacja rozładunku" name="deliveryLocation" />
    </div>

    <div class="form-group">
        <label for="status">Status: <span style="color: red">*</span></label>
        <input type="text" class="form-control" id="status" placeholder="Status" name="status" />
    </div>

    <div class="form-group">
        <label for="driverId">Kierowca: <span style="color: red">*</span></label>
        <input type="number" class="form-control" id="driverId" placeholder="Kierowca" name="driverId" />
    </div>

    <div class="form-group">
        <label for="sequenceNumber">Kolejka: <span style="color: red">*</span></label>
        <input type="number" class="form-control" id="sequenceNumber" placeholder="Kolejka" name="sequenceNumber" />
    </div>

    <div class="text-center m-5">
        <button type="submit" class="btn btn-success">Dodaj</button>
        <a class="btn btn-danger" href="javascript: history.go(-1)">Wróć</a>
    </div>
</form>