@model TransportManagement.Models.AssignTruck.AssignTruckViewModel
@{
    ViewData["Title"] = "Przypisania Ciężarówki";
}
@if (TempData["message"] != null)
{
    <script>
        alert('@TempData["message"]');
    </script>
}

<div class="text-center">
    <h1 class="display-4">Lista Przypisań</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Marka i Model</th>
                <th scope="col">Imię i Nazwisko</th>
                <th scope="col">Data przypisania</th>
                <th scope="col">Data zwrotu</th>
                <th scope="col">Czy zwrózono?</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AssignTrucks)
            {
                <tr>
                    <td scope="row">@item.Id</td>
                    <td scope="row">@item.Truck.Brand @item.Truck.Model</td>
                    <td scope="row">@item.Driver.Name @item.Driver.LastName</td>
                    <td scope="row">@item.AssignmentDate.ToShortDateString()</td>
                    <td scope="row">@item.ReturnDate.ToShortDateString()</td>
                    <td scope="row">@(item.IsReturned?"Zwrócono":"Nie zwrócono")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center m-5">
        <a class="btn btn-outline-success" asp-area="" asp-controller="AssignTruck" asp-action="AssignmentTrucks" role="button">Dodaj ciężarówkę do kierowcy</a>
        <a class="btn btn-outline-warning" asp-area="" asp-controller="AssignTruck" asp-action="ReturnAssignment" role="button">Zwróć ciężarówkę</a>
        <a class="btn btn-outline-danger" asp-area="" asp-controller="AssignTruck" asp-action="DeleteAssignment" role="button">Usuń przypisanie ciężarówki</a>
    </div>
</div>