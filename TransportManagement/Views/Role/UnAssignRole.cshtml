@model TransportManagement.Models.User.UserViewModel
@{
    ViewData["Title"] = "Zarządzanie rolami";
}


<div class="text-center">
    <h1 class="display-4">Lista Użytkowników</h1>
    <div class="table-container">
        <table class="table table-hover" id="usersTable">
            <thead>
                <tr>
                    <th scope="col">Imie</th>
                    <th scope="col">Nazwisko</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Rola</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td scope="row">@item.Name</td>
                        <td scope="row">@item.LastName</td>
                        <td scope="row">@item.Email</td>
                        <td scope="row">@item.Role</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<form asp-action="UnAssignRole" method="post" class="form-container">
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" id="email" name="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="selectRole">Wybierz Role</label>
        <select id="selectRole" name="roleName" class="form-control" required>
            <option value="Admin">Admin</option>
            <option value="Dispatcher">Dispatcher</option>
            <option value="Driver">Driver</option>
        </select>
    </div>
    <div class="text-center m-5">
        <button type="submit" class="btn btn-danger">Usuń rolę</button>
    </div>
    <div class="text-center mt-4">
        <a class="btn btn-danger" href="javascript: history.go(-1)">Wróć</a>
    </div>
</form>